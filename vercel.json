{
  "version": 2,
  "builds": [
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/dist/index.html" }
  ],
  "env": {
    "GOOGLE_AI_API_KEY": "${GOOGLE_AI_API_KEY}"
  }
}
